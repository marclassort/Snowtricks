{% extends 'base.html.twig' %}

{% block body %}
	<h1>Création d'une figure</h1>

	{{ form_start(formTrick) }}

	<div class="form-group">
		{{ form_row(formTrick.name, {'label': "Nom de la figure", 'attr': {'placeholder': "Nom", 'class': "form-control mb-3"}}) }}
	</div>

	<div class="form-group">
		{{ form_row(formTrick.description, {'label': "Description", 'attr': {'placeholder': "Description", 'class': "form-control mb-3"}}) }}
	</div>

	<div class="form-group">
		{{ form_row(formTrick.category, {'label': "Catégorie", 'attr': {'placeholder': "Catégorie", 'class': "form-control mb-3"}}) }}
	</div>

	<div class="form-group">
		{{ form_row(formTrick.content, {'label': "Contenu", 'attr': {'placeholder': "Contenu", 'class': "form-control mb-3"}}) }}
	</div>

	<div class="form-group">
		{{ form_row(formTrick.author, {'label': "Auteur", 'attr': {'placeholder': "Auteur", 'class': "form-control mb-3"}}) }}
	</div>


	<button type="submit" class="btn btn-success form-control mt-3">
		{% if editMode %}
			Enregistrer
		{% else %}
			Ajouter la figure
		{% endif %}
	</button>

	{{ form_end(formTrick) }}

{% endblock %}
